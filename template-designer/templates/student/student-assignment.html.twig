{% extends "menu.html.twig" %}

{% block style %}
    {{ parent() }}
    <link rel="stylesheet" href="css/student-assignment.css">
{% endblock %}

{% block title %}Assignments{% endblock %}

{% block body %}
<div class="container">
    <form method="post">
        <a href="student-home"><input type="button" name="exit" id="exit" value="Exit"></a>
        <h1>{{assignments.a1.title}}</h1>
        <h3 id="date">Soft deadline: {{assignments.a1.soft_deadline}}</h3>
        <h3 id="date">Hard deadline: {{assignments.a1.hard_deadline}}</h3>
        <div class="description">
            <h3 id="">Description</h3>
            {% apply markdown_to_html %}
            {{ assignments.a1.description }}
            {% endapply %}
        </div>
        <label for="file" id="custom-file-input">        
            Upload File
        </label>
        <input type="file" name="file" id="file" multiple>
        <input type="submit" name="submit" id="submit" value="Submit">        
    </form>
</div>
{% endblock %}