<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    {% block style %}
    <script src="https://kit.fontawesome.com/cceb3c1a4c.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="css/style.css">
    <link rel="stylesheet" href="css/userinfo.css">
    <script defer src="js/userinfo.js"></script>
    {% endblock %}
    {% block javascripts %}
    {% endblock %}
    <title>{% block title %}Main Page{% endblock %}</title>
</head>
<body>
    <nav class="navbar">
        {% if menu == "student" %}
        <h2 id="navtext"><a href="{{ asset(navhref) }}">HW-INTERFACE</a></h2>
        <ul>
            <a><li><i id="icon" class="fa fa-user fa-2x"></i></li></a></li>
            <div class="user">
                <h1 class="username">
                    {{ user.name }}
                    {% if user.gender == "man" %}
                        <i class="fa-solid fa-person"></i>
                    {% else %}
                        <i class="fa-solid fa-person-dress"></i>
                    {% endif %}
                </h1>
                <h2 class="role">{{ user.role }}</h2>
                <h2 class="class">
                    {% if user.class|first|lower == 'i' %}
                    <i class="fa-solid fa-computer"></i>
                    {% elseif user.class|first|lower == 'e' %}
                    <i class="fa-solid fa-bolt"></i>
                    {% elseif user.class|first|lower == 's' %}
                    <i class="fa-solid fa-gear"></i>
                    {% elseif user.class|first|lower == 'v' %}
                    <i class="fa-solid fa-gavel"></i>
                    {% elseif user.class|first|lower == 'a' %}
                    <i class="fa-solid fa-car"></i>
                    {% elseif user.class|first|lower == 'n' %}
                    <i class="fa-solid fa-wrench"></i>
                    {% elseif user.class|first|lower == 'l' %}
                    <i class="fa-solid fa-laptop"></i>
                    {% endif %}
                    {{ user.class|upper }}
                </h2>
            </div>
        </ul>
        {% elseif menu == "teacher" %}
        <h2 id="navtext"><a href="{{ asset(navhref) }}">TEACHER</a></h2>
        <ul>
            <a href="teacher-import"><li><h2>Import</h2></li></a></li>
            <a href="teacher-home"><li><h2>Groups</h2></li></a></li>
            <a href="teacher-assignments"><li><h2>Homeworks/Tests</h2></li></a></li>
        </ul>
        {% endif %}
    </nav>
    {% block body %}
    {% endblock %}
</body>
</html>