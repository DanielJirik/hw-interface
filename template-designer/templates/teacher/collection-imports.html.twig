{% extends "home.html.twig" %}
{% block style %}
    {{ parent() }}
    <link rel="stylesheet" href="css/collection-imports.css">
{% endblock %}

{% block navbar %}
    <ul>
        <a href="teacher-import"><li><h2>Import</h2></li></a></li>
        <a href="teacher-home"><li><h2>Groups</h2></li></a></li>
        <a href="teacher-assignments"><li><h2>Homeworks/Tests</h2></li></a></li>
    </ul>
{% endblock %}


{% block body %}
    <div class="table">
        <table class="imports">
            <tr>
                <th>Scripts</th>
                <th>
                    <div>
                        <input class="start"type="button" value="Select all" href="import">
                        <input class="start"type="button" value="Disselect all" href="import">
                    </div>
                </th>
            </tr>
            {% block data %}
                {% for i in scripts %}
                    <tr>
                        <td>{{ i }}</td>
                        <td><input type="checkbox" class="ckeckboxes"></td>
                    </tr>
                {% endfor %}
            {% endblock %}
        </table>
        <div class="btn-start">
            {% block btn %}<a href="collection-progress"><input class="start" type="button" value="Start"></a>{% endblock %}
        </div>
    </div>
{% endblock %}