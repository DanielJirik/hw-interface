            {% endfor %}
        </ul>
    </div>
{% endblock %}

{% block actionName %}Add new Student{% endblock %}

{% block content %}
    <h2 class="input-texts">Name: </h2>
    <input type="text">
    <input class="btn-submit" type="submit" value="Add to list">
{% endblock %}

