{% extends "home.html.twig" %}

{% block style %}
    {{ parent() }}
    <link rel="stylesheet" href="css/group.css">
{% endblock %}

{% block title %}
    Groups
{% endblock %}

{% block navtext %}
    TEACHER
{% endblock %}

{% block navbar %}
    <ul>
        <a href="import"><li><h2>Import</h2></li></a></li>
        <a href="group"><li><h2>Groups</h2></li></a></li>
        <a href="homeworks-index"><li><h2>Homeworks/Tests</h2></li></a></li>
    </ul>
{% endblock %}

{% block page_header %}
    <div class="addGroup">
        <input class="newG" type="button" value="+" onclick="openPopup()">
    </div>
{% endblock %}

{% block card_content %}
<h2 class="group-name">{{ assignment }}</h2>
    <form method="post">
        <div class="buttons">
            <a href="#"><input class="button-r" type="button" value="Rename"></a>
            <a href="#"><input class="button-d" type="button"value="Delete"></a>
        </div>
    </form>
{% endblock %}

{% block page_footer %}
    <div class="popup" id="popup">
        <h2>Do you really want to delete the group?</h2>
        <button type="button" value="ok" onclick="closePopup()"></button>
    </div>
{% endblock %}
